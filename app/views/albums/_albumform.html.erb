<div class="row">
  <div class="medium-6 large-6 column">
    <article>
    <%= form_for @album do |f| %>
      <p><%= f.label :name %></p>
      <p><%= f.text_field :name %></p>

      <p><%= f.label :artist %></p>
      <p><%= f.text_field :artist %></p>

      <p><%= f.label :description %></p>
      <p><%= f.text_area :description, rows:"5" %></p>

      <%= f.hidden_field :ranked, :value => 0 %>

      <%= f.submit "Save" %>
    <% end %>
    </article>
  </div>
</div>
