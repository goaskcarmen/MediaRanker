<section>
  <h1>Top Movies</h1>
  <% @movies.each do |movie| %>
    <h2><%= link_to movie.name, movie_path(movie) %></h2>
    <p>Ranked: <%= movie.ranked %></p>
  <% end %>

  <%= link_to "View More Movies", movies_path %>
</section>

